{
  "name": "Research Assistant",
  "version": "1.0",
  "description": "An AI-powered research assistant for intuitive and comprehensive research",
  "manifest_version": 3,
  "permissions": [
    "identity",
    "storage",
    "tabs",
    "contextMenus",
    "activeTab",
    "notifications"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Research Assistant"
  },
  "options_page": "options.html",
  "oauth2": {
    "client_id": "921588679327-n2em5jlnb5n57htvd3fg68gpkk12esg9.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/drive.file"
    ]
  }
}